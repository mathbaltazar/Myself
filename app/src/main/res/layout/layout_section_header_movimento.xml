<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/all_default_layout_offset_4"
    android:paddingTop="@dimen/all_default_layout_offset_16"
    android:paddingBottom="6dp">
    <!--android:background="@color/off_white"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_header_movimento_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ABRIL/2020"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_header_movimento_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 255,00"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:layout_marginTop="@dimen/all_default_layout_offset_4"
        android:background="@color/colorAccent" />

</androidx.appcompat.widget.LinearLayoutCompat>
