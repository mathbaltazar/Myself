<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.myself.ui.crises.CrisesActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/textview_crises_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroung_gradient_app_color"
        android:gravity="center"
        android:padding="@dimen/all_default_layout_offset_16"
        android:text="CRISES"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/all_default_layout_offset_4">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/all_default_layout_offset_8"
            app:flexDirection="column">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Controle de crises"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_24" />

            <LinearLayout
                android:id="@+id/ll_crises_mais_detalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicamentos: "
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Divalcon ER 500mg (1 cp a noite e 1 de manhã)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Hidantal (1 cp a noite)" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="@dimen/all_default_layout_offset_8"
                    android:background="@color/off_white" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/all_default_layout_offset_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Número de crises: " />

                    <TextView
                        android:id="@+id/tv_crises_numero_crises"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textColor="@android:color/darker_gray" />

                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_crises_mais_detalhes"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mais detalhes"
                app:icon="@drawable/ic_arrow_down"
                app:iconGravity="textEnd" />

            <!--
            Dias que não tomou a dosagem corretamente... (Notificações??)
            -->

        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/all_default_layout_offset_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Últimas crises"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_18"
            app:layout_flexGrow="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_alignSelf="center"
            android:text="Até:  " />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="-12dp"
            android:paddingEnd="-12dp"
            app:boxBackgroundColor="@android:color/white"
            app:hintEnabled="false">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/dropdown_crises_filtro_anos"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:inputType="none"
                android:padding="0dp"
                android:text="Todos" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/tv_crises_sem_crises_registradas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Não há registros de crises."
        android:textAlignment="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_crises"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="true"
        android:padding="@dimen/all_default_layout_offset_4"
        tools:listitem="@layout/adapter_crises_item" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:background="@color/off_white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_crises_registrar_crise"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/all_default_layout_offset_8"
            android:text="Registrar Crise"
            app:icon="@drawable/ic_fab_add" />

</LinearLayout>