<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <TextView
        android:id="@+id/tv_registros_sem_registros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/all_default_layout_offset_16"
        android:text="Não há registros."
        android:textAlignment="center"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone"
        tools:visibility="visible" />


    <ProgressBar
        android:id="@+id/progress_registros_carregando"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="@dimen/all_default_layout_offset_16"
        android:indeterminate="true"
        android:indeterminateBehavior="cycle"
        android:visibility="gone"
        tools:visibility="visible" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_registros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/all_default_layout_offset_4"
        tools:itemCount="3"
        tools:listitem="@layout/layout_section_item_registro" />

</LinearLayout>
