<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.myself.ui.entradas.EntradasFragment"
    tools:ignore="HardcodedText, ContentDescription">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_entradas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/all_default_layout_offset_8"
        android:padding="@dimen/all_default_layout_offset_4" />

    <TextView
        android:id="@+id/tv_entradas_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_size_16"
        android:text="Não há entradas registradas!"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_16"
        android:textStyle="italic" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_entradas_add"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/all_default_layout_offset_16"
        android:layout_marginBottom="@dimen/all_default_layout_offset_16"
        android:backgroundTint="@color/off_primary"
        android:src="@drawable/ic_add" />

</RelativeLayout>