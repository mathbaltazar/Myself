<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/all_default_layout_offset_4"
    android:layout_marginVertical="@dimen/all_default_layout_offset_2"
    android:orientation="vertical"
    android:padding="@dimen/all_default_layout_offset_4">
    <!--android:background="@drawable/background_section_item_selected"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_registro_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            tools:text="Bermuda" />

        <TextView
            android:id="@+id/tv_registro_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            tools:text="12/05/2020" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_default_layout_offset_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_registro_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            tools:text="R$ 45,00" />

        <TextView
            android:id="@+id/tv_registro_outros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:textStyle="italic"
            tools:text="Boutique do centro" />

    </LinearLayout>

</LinearLayout>