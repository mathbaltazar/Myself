<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/all_default_layout_offset"
    android:orientation="vertical"
    tools:ignore="ContentDescription">


    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="@dimen/all_default_layout_offset"-->
        <!--android:text="@string/all_string_adicionar"-->
        <!--android:textAlignment="textStart"-->
        <!--android:textColor="@color/colorPrimary"-->
        <!--android:textSize="20sp" />-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/all_default_layout_offset"
        android:text="@string/all_carteira_title_pendencias"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/all_default_layout_offset"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <TextView
            android:id="@+id/button_add_pendencia"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_button_default_height"
            android:padding="@dimen/all_padding_card_button_textview"
            android:gravity="center|start"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_add"
            android:text="@string/all_button_nova_pendencia" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/all_default_layout_offset"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">


        <TextView
        android:id="@+id/tv_sem_pendencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/all_default_layout_offset"
        android:text="@string/all_label_sem_pendencias"
        android:textAlignment="center" />

        <ListView
        android:id="@+id/listview_carteira_pendencias"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>
</LinearLayout>
