<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/all_default_layout_offset">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/all_default_layout_offset">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/btn_toggle_add_item_carteira"
                    android:text="@string/all_carteira_title_pendencias"
                    android:textAlignment="textStart"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btn_toggle_add_item_carteira"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@android:drawable/ic_input_add" />

            </RelativeLayout>

            <View
                android:id="@+id/divider_add_item_carteira"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/layout_add_item_carteira"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/all_default_layout_offset"
                android:orientation="vertical"
                android:padding="@dimen/all_default_layout_offset"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/all_default_layout_offset"
                    android:layout_marginBottom="@dimen/all_default_layout_offset"
                    android:text="@string/all_string_adicionar"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textinput_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/all_string_adicionar_invalido"
                    android:textColor="@android:color/holo_red_light"
                    android:visibility="gone" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/all_input_hint_descricao">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinput_descricao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/all_default_layout_offset"
                    android:hint="@string/all_input_hint_valor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textinput_valor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_register_item_carteira"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="@dimen/all_default_layout_offset"
                    android:background="@drawable/all_button_border_background"
                    android:text="@string/all_string_adicionar"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_sem_pendencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/all_default_layout_offset"
        android:text="@string/all_label_sem_pendencias"
        android:textAlignment="center"
        android:visibility="gone" />


    <ListView
        android:id="@+id/list_carteira_aberta"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
