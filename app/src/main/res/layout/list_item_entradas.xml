<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/all_default_layout_offset_8"
    android:background="?android:selectableItemBackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_entradas_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 45,00"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_30"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data"
            android:textAlignment="textEnd"
            android:textSize="@dimen/text_size_16"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_entradas_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_entradas_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salario Mes Junho"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_item_entradas_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19/06/2020" />

    </LinearLayout>

</LinearLayout>