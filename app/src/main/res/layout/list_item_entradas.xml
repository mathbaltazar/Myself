<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/all_default_layout_offset_8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_entradas_valor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R$ 45,00"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_entradas_dono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matheus"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_item_entradas_expand_arrow"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/all_default_layout_offset_8"
            android:src="@drawable/ic_arrow_down" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_entradas_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_item_entradas_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salario Mes Junho"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_item_entradas_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="19/06/2020" />

    </LinearLayout>

</LinearLayout>