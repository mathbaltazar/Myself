<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetalhesCarteiraPendenciaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_item_carteira_detalhes_action_buttons"
        android:orientation="vertical"
        android:padding="@dimen/all_default_layout_offset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_default_layout_offset"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_pendencia_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R$ 460,00"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/off_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_default_layout_offset"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciada em:" />

            <TextView
                android:id="@+id/tv_item_carteira_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24/07/2019"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_default_layout_offset"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Descrição:" />

            <TextView
                android:id="@+id/tv_item_pendencia_descricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:maxLines="2"
                android:text="Parcelas do carro"
                android:textAlignment="textEnd"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_default_layout_offset"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor pago:" />

                <TextView
                    android:id="@+id/tv_item_carteira_valor_pago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 200,00"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_aviso_valor_ultrapassado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all_string_detalhes_item_carteira_valor_ultrapassado"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextWarning"
                android:textSize="@dimen/text_size_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/all_default_layout_offset"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumo de Ajustes" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_border_rounded_grey">

                <TextView
                    android:id="@+id/tv_sem_registros_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/all_default_layout_offset"
                    android:text="Não há registros."
                    android:textAlignment="center" />

                <ListView
                    android:id="@+id/listview_registro_item_carteira"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_item_carteira_detalhes_action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/all_default_layout_offset">

        <TextView
            android:id="@+id/button_detalhes_item_carteira_novo_ajuste"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_button_default_height"
            android:layout_margin="@dimen/all_default_layout_offset"
            android:background="@drawable/background_border_rounded"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="NOVO AJUSTE"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_detalhes_item_carteira_marcar_como_pago"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_button_default_height"
            android:layout_margin="@dimen/all_default_layout_offset"
            android:text="Marcar como pago"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>