<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:isScrollContainer="true"
    tools:context="br.com.myself.ui.financas.FinancasActivity">

    <TextView
        android:id="@+id/textview_financas_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroung_gradient_app_color"
        android:padding="@dimen/all_default_layout_offset_16"
        tools:text="Registros"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />




    <FrameLayout
        android:id="@+id/container_finanacas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="true" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:background="@color/off_white" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view_financas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/all_default_layout_offset_8"
        app:menu="@menu/menu_bottom_navigation_financas" />
</LinearLayout>